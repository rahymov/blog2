
	<%= simple_form_for(@post) do |f| %>
		<%= f.input :title%>
		<%= f.input :body %>
		<%= f.submit %>
	<%end%>

<% if @post.errors.any? %>
	<div id="errors">
		<h2> <%= pluralize(@post.errors.count, "error") %> Prevented this post from saving</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li> <%= msg %></li>
			<%end%>
		</ul>
	</div>									
<% end %>